datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  firstName String   // Added firstName
  lastName  String   // Added lastName
  role      String   @default("user") // Default role is "user"
  createdAt DateTime @default(now())
}

model Match {
  id        Int      @id @default(autoincrement())
  date      DateTime
  teams     String
  score     String
  createdAt DateTime @default(now())
}

