datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Player {
  id          Int      @id @default(autoincrement())
  name        String
  position    String
  nationality String
  age         Int
  createdAt   DateTime @default(now())
}

model News {
  id          Int      @id @default(autoincrement())
  title       String
  content     String
  publishedAt DateTime @default(now())
}

model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  password String
  role     String   // เช่น "admin" หรือ "user" เพื่อการจัดการมุมมองต่างๆ
  createdAt DateTime @default(now())
}
